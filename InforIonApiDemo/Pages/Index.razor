@page "/"

@using MudBlazor

<PageTitle>Welcome</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudStack Spacing="2">
        <MudText Typo="Typo.h4" GutterBottom>
            Welcome to the Infor ION API Demo Application
        </MudText>
        <MudText>
            This Blazor WebAssembly application demonstrates how to access the Infor ION API to retrieve data. The main goal is to provide a clear example, addressing common challenges. The code is thoroughly commented to explain its functionality.
        </MudText>

        @if (_NoConnectionSettings != null)
        {
            <MudCard Elevation="4" Class="mt-4">
                <MudCardContent>
                    <MudText>
                        It appears that your connection settings are not configured. Please navigate to the <MudLink Href="settings">Settings</MudLink> page to set them up.
                    </MudText>
                </MudCardContent>
            </MudCard>
        }
    </MudStack>
</MudContainer>
