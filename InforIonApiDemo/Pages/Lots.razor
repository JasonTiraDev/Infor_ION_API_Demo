@page "/Lots"
@inject IConfiguration _config 


<PageTitle>Lots</PageTitle>
<MudText>List of lots pulled from ION API - CSI</MudText>

<br/>

<MudPaper MaxHeight="800px" MaxWidth="800px">
    <MudTable Items="@lotEnum" Hover="true" FixedHeader="true" Dense="true">
        <HeaderContent>
            <MudTh>Lot</MudTh>
            <MudTh>Item</MudTh>
            <MudTh>Description</MudTh>
            <MudTh>_ItemId</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Lot</MudTd>
            <MudTd>@context.Item</MudTd>
            <MudTd>@context.Description</MudTd>
            <MudTd>@context._ItemId</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[] { 5, 10, 20, 50, 100 }" />
        </PagerContent>
    </MudTable>
</MudPaper>